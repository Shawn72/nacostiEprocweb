@model IEnumerable<NacostiEProcMVC.Models.ContactsModel>

@{
    ViewBag.Title = "AllContactsList";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<div class="col-md-12">
    <div class="table-responsive">
        <table class="table table-striped custom-table m-b-0 datatable">
            <thead>
            <tr>
                <th>#</th>
                <th>Contact Number</th>
                <th>Name</th>
                <th>Email</th>
                <th>KRA Pin</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (Session["userNo"] != null)
            {
                var sno = 0;
                if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        sno++;
                        <tr>
                            <td>
                                @sno
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.No)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.E_mail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KRA_PIN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone_No)
                            </td>
                            <td class="text-right">
                                <div class="dropdown">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="/Home/ApplyTender?customerNum=@item.No" ><i class="fa fa-eye m-r-5"></i> View</a></li>
                                        <li><a href="/Home/ApplyTender?customerNum=@item.No"><i class="fa fa-pencil m-r-5"></i> See Applications</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>

                    }
                }
                else
                {
                    <tr>
                        <td>
                            <div class="alert alert-danger">No contacts list found!</div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>
                        <a href="/Home/Login">Login First</a>
                    </td>
                </tr>
            }

            </tbody>
            <tfoot>
            <tr>
                <th>#</th>
                <th>Contact Number</th>
                <th>Name</th>
                <th>Email</th>
                <th>KRA Pin</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
            </tfoot>

        </table>

    </div>
</div>