@model IEnumerable<NacostiEProcMVC.navOData.PrequalifiedSuppliers>

@{
    ViewBag.Title = "AcceptedPreQualification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    
<div class="content container-fluid">
    <div class="panel panel-table">
        <div class="panel-heading">
            <h3 class="panel-title"> Accepted Applications</h3>
        </div>
            <div class="panel-body">

                <table class="table table-striped custom-table m-b-0 datatable">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Session["contactNo"] != null)
                    {
                        var sno = 0;
                        if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                sno++;
                                <tr>
                                    <td>
                                        @sno
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category_Name)
                                    </td>
                                    <td class="text-right">
                                        <div class="dropdown">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <ul class="dropdown-menu pull-right">
                                                <li><a href="#" data-toggle="modal" data-target="#edit_employee"><i class="fa fa-pencil m-r-5"></i> Edit</a></li>
                                                <li><a href="#" data-toggle="modal" data-target="#delete_employee"><i class="fa fa-trash-o m-r-5"></i> Delete</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>

                            }
                        }
                        else
                        {
                            <tr>
                                <td>
                                    <div class="alert alert-danger">No Applications made yet!</div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>
                                <a href="/Home/Login">Login First</a>
                            </td>
                        </tr>
                    }

                    </tbody>
                    <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                    </tfoot>
                </table>

             </div>
    </div>
</div>
