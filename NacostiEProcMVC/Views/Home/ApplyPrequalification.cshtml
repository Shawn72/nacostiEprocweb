
@{
    ViewBag.Title = "ApplyPrequalification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content container-fluid">
        <span id="feedbackMsg" style="display: none"></span><br />
        <div class="clearfix form-group">
            <div class="col-sm-4"></div>
            <div class="col-sm-4" id="gifLoading" style="display: none">
                <img src="~/assets/loaders/load.gif" width="100" height="100"/>
            </div>
            <div class="col-sm-4"></div>
        </div>
        <form action="" method="post">
           
            <div class="form-group">
                <div class="col-md-4">
                    @Html.Action("FiscalYears", "Home")
                </div>
                <div class="col-md-4">
                    @Html.Action("AllSupplierCategories", "Home")
                </div>
                <div class="col-md-4">
                    <div class="form-group text-center pull-right">
                        <button type="submit" class="btn btn-success rounded" id="btnApplyPreQ"><i class="fa fa-save">&nbsp;Submit Request</i></button>
                    </div>
                </div>
            </div>
            
        </form>
    
    <div class="row">
    <div class="col-md-12">
        <div class="panel panel-table">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-4">
                        <h4 class="page-title">My Applied Prequalification </h4>
                    </div>
                    <div class="col-xs-8 text-right m-b-30">
                        <a href="/Home/UploadFiles" class="btn btn-success pull-right rounded"><i class="fa fa-plus"></i> Attach Documents</a>
                        <div class="view-icons">
                            <a href="#" class="grid-view btn btn-link"><i class="fa fa-th"></i></a>
                            <a href="#" class="list-view btn btn-link active"><i class="fa fa-bars"></i></a>
                        </div>
                    </div>

                </div>
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    @Html.Action("PrequalifiedApplications", "Home")
                </div>
            </div>
        </div>
    </div>
</div>
</section>

