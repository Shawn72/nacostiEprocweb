
@{
    ViewBag.Title = "ApplyTenderPublic";
    Layout = "~/Views/Shared/_NonQualified_Layout.cshtml";
    var tendorNumber = Request.QueryString["tendorNo"];
    Session["tendNo"] = tendorNumber;
}

<div class="content">
    <div class="panel panel-table">
        <div class="panel-heading">
            
            <div class="panel-title">
                <div class="form-group">
                    <h3><strong style="color: chocolate"> Apply for this Tender: @tendorNumber</strong></h3>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div id="bidAmmount">
                <form action="" method="post">
                    <span id="feedbackMsg" style="display: none"></span><br />
                    <input type="hidden" value="@tendorNumber" id="txtTendorNo"/>
                    <div class="form-group">
                        <div class="col-md-6">
                            <div class="form-group form-focus">
                                <label class="control-label">Bid Amount (KES)</label>
                                <input class="form-control floating" type="number" id="txtBidamount">
                                <span class="form-control-feedback"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group text-center pull-left">
                                <button type="submit" class="btn btn-success rounded" id="btnApplyPulicTender"><i class="fa fa-save">&nbsp;Apply</i></button>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
       
    </div>
    
    <div class="panel panel-body" id="uploadFilesDiv" style="display: none">
        <div>
            @using (Html.BeginForm("UploadTenderDocsPublic", "Home", FormMethod.Post, new {enctype = "multipart/form-data", @name = "documentsform", @id = "documentsform"}))
            {
                <input type="hidden" id="tendorNum" value="@tendorNumber"/>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label" style="font-weight: bold;">Select KRA PIN</label>
                    </div>
                    <div class="col-md-6">
                        <input type="file" name="postedFiles" id="postedFiles1" class="form-control" multiple="multiple"/>&nbsp;
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label" style="font-weight: bold;">Select Tax Compliance</label>
                    </div>
                    <div class="col-md-6">
                        <input type="file" name="postedFiles" id="postedFiles2" class="form-control" multiple="multiple"/>&nbsp;

                    </div>

                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label" style="font-weight: bold;">Select Other Document</label>
                    </div>
                    <div class="col-md-6">
                        <input type="file" name="postedFiles" id="postedFiles3" class="form-control" multiple="multiple"/>&nbsp;
                        <button type="submit" class="btn btn-success btn-block pull-right"><i class="fas fa-upload"></i>&nbsp;Upload</button>
                    </div>
                </div>
            }
        </div>
    </div>
    
    <div class="panel panel-table">
        <div class="panel-body">
            <div class="form-group">
                <span style="color: green">@Html.Raw(ViewBag.Message)</span>
            </div>
            <a href="/Home/ContactsIndex"><i class="fa fa-arrow-circle-left m-r-5"></i> Back</a>
        </div>
    </div>

</div>

