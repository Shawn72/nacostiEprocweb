@model IEnumerable<NacostiEProcMVC.Models.ProcurementModel>
@{
    ViewBag.Title = "OpenRfQs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Open RfQs</h3>

<div class="col-md-12">
    <div class="table-responsive">
        <table class="table table-striped custom-table m-b-0 datatable">
            <thead>
            <tr>
                <th>#</th>
                <th>No.</th>
                <th>Title</th>
                <th>Supplier Category</th>
                <th>Return Date</th>
                <th>Return Time</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (Session["contactNo"] != null)
            {
                var sno = 0;
                if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        sno++;
                        <tr>
                            <td>
                                @sno
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.No) 
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title) 
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierCategory) 
                            </td>
                            <td>
                                @Convert.ToDateTime(item.Return_Date).ToShortDateString()
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Return_Time) 
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status) 
                            </td>
                            <td class="text-right">
                                <div class="dropdown">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="#" data-toggle="modal" data-target="#edit_employee"><i class="fa fa-pencil m-r-5"></i> Apply</a></li>
                                        <li><a href="#" data-toggle="modal" data-target="#delete_employee"><i class="fa fa-eye m-r-5"></i> View</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>

                    }
                }
                else
                {
                    <tr>
                        <td>
                            <div class="alert alert-danger">No Open RFQs yet!</div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>
                        <a href="/Home/Login">Login First</a>
                    </td>
                </tr>
            }

            </tbody>
            <tfoot>
            <tr>
                <th>#</th>
                <th>No.</th>
                <th>Title</th>
                <th>Supplier Category</th>
                <th>Return Date</th>
                <th>Return Time</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </tfoot>

        </table>

    </div>
</div>

